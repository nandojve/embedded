USE_WIRELESS = 0
#STACK_TYPE = LwMesh
STACK_TYPE = ATMAC-802.15.4
HIGHEST_STACK_LAYER=TAL
STACK_VERSION = Current

USE_ASF = 1
ASF_BPM_DRIVER = 1
ASF_PMC_DRIVER = 1
ASF_USB_DRIVER = 1
ASF_PIO_DRIVER = 1
ASF_UDP_DRIVER = 1
ASF_TWI_DRIVER = 1
ASF_TWIM_DRIVER = 0
ASF_SPI_DRIVER = 1
ASF_UART_DRIVER = 1
ASF_USART_DRIVER = 1
ASF_EFC_DRIVER = 1
ASF_EIC_DRIVER = 1
ASF_WDT_DRIVER = 1
USE_SIO_MANAGER = 1

ASF_FLASH_EFC_SERVICE = 1
ASF_SPI_SERVICE = 1

USB_CLASS_CDC_DEVICE = 1

# Build specific properties for EM400EB and RF233
TAL_TYPE = AT86RF233
BOARD_TYPE = EM400EB
ARMTYPE = SAM4E
MCU = atsam4e16c
PLATFORM = sam
F_CPU = 120000000
CFLAGS += -DARMTYPE=$(ARMTYPE)
CFLAGS += -DSIO_HUB
CFLAGS += -DSIO2HOST_CHANNEL=SIO_USB
SIO2HOST_CHANNEL = SIO_USB

## General Flags
PROJECT = STDIO_USB
FORMAT = ihex
SINGLESTEP	= -DSINGLESTEPSUPPORT
CROUTINE = TRUE
CFLAGS += -DMAC802_15_4
CFLAGS += -DREDUCED_PARAM_CHECK
CFLAGS += -DBEACON_SUPPORT
CFLAGS += -DMAC_USER_BUILD_FEATURE_CONFIG
CFLAGS += -DTRX_REG_RAW_VALUE
CFLAGS += -DADC_DRIVER

# Target Flags
TARGET_DIR = .
TARGET = $(PROJECT)

# Path variables
## Path to main project directory
ROOT_DIR = ../../..

CSRC	+= src/stdio_usb_example.c

# List any extra directories to look for include files here.
#     Each directory must be seperated by a space.
EXTRAINCDIRS +=																	\
	src/config

include																			\
	$(ROOT_DIR)/xdk-asf-3.x/$(PLATFORM)/platform.mk